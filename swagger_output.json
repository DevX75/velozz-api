{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Velozz API",
    "description": "API Rest Velozz - <b>Generado con Swagger</b>"
  },
  "host": "",
  "basePath": "/api",
  "tags": [
    {
      "name": "User",
      "description": "Endpoints"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    },
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://petstore.swagger.io/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "read_pets": "read your pets",
        "write_pets": "modify pets in your account"
      }
    }
  },
  "consumes": [
    "application/json",
    "form-data"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/settings/create": {
      "post": {
        "tags": [],
        "description": "",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/settings/update/logo/{id}": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "ACTUALIZAR EL LOGO DE UNA CONFIGURACION",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id del registro en la coleccion"
          },
          {
            "name": "logo",
            "requestbody": {
              "content": "multipart/form-data",
              "type": "object",
              "required": true
            },
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "<b>Logo fue actualizado</b>"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/settings/update/{id}": {
      "post": {
        "tags": [],
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/settings": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "LISTAR LAS CONFIGURACIONES GENERALES.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "<b>Se devuelve la coleccion de configuraciones</b>",
            "schema": {
              "$ref": "#/definitions/GeneralSetting"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/NoSchema"
            },
            "description": "No hay elementos en la coleccion de configuraciones"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "NoSchema": {
      "type": "object",
      "properties": {}
    },
    "GeneralSetting": {
      "type": "object",
      "properties": {
        "franchiseName": {
          "type": "string",
          "example": "Velozz"
        },
        "franchiseLogo": {
          "type": "string",
          "example": ""
        },
        "clientInvoicesDueDays": {
          "type": "number",
          "example": 7
        },
        "TIN": {
          "type": "string",
          "example": "8751-23357"
        },
        "address": {
          "type": "string",
          "example": "Managua, NI"
        },
        "invoicesFooter": {
          "type": "string",
          "example": "La vida en simple"
        },
        "invoicesCurrencyName": {
          "type": "string",
          "example": "USD"
        },
        "payInstructions": {
          "type": "string",
          "example": "Pay instructions here"
        }
      }
    }
  }
}